@page
@model SharkGaming.Pages.ProductInfoPages.SearchProductsPageModel
@{
}

<h1 class=" text-white">Search All Products</h1>
<br />
<form method="post" class="form-inline">
    <input asp-for="SearchString" class="form-control mr-1" placeholder="Enter search term" />
    <br />
    <input type="submit" asp-page-handler="NameSearch" value="Search" class="btn btn-dark" />
</form>
<br />

<table class="table table-hover table-striped">
    <thead>
        <tr class="bg-dark text-white">
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null)
        {
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td class="text-white">
                        @item.Id
                    </td>
                    <td class="text-white">
                        @item.Name
                    </td>
                    <td class="text-white">
                        @item.Price
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
