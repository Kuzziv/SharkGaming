@*Case 1*@
            <div>
                <a href="/ProductInfoPages/ComponentInfoPages/CasePage1" class="btn btn-dark">
                    <h1 class="text-center">
                        @foreach(var x in Model.cases)
                        {
                            @if (x.Id == 0)
                            {
                                @x.Name
                                Model.Bool = true;
                            }
                        }
                        @if(Model.Bool == false)
                        {
                            <text>NAME NOT FOUND</text> 
                        }
                        else Model.Bool = false;
                     </h1>

                    <img src="~/images/Components/Case1.png" class="img-fluid" />
                    <br />
                    Very super cool RGB dickladon gaming case.
                    <br />

                    <h1 class="text-orange">
                        @foreach (var x in Model.cases)
                        {
                            @if (x.Id == 0)
                            {
                                @x.Price <text> Kr</text>
                                Model.Bool = true;
                            }
                        }
                        @if (Model.Bool == false)
                        {
                            <text>PRICE NOT FOUND</text>
                        }
                        else Model.Bool = false;
                    </h1>
                </a>
